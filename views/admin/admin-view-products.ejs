<style>
  #stockContainer {
    /* border: 1px solid black; */
    height: 35px;
    width: 100px;
    border-radius: 5px;
    background-color: #4B6FC9;
    color: white;
  }

  .stock {
    /* width: min-content; */
    max-width: 40px;
    text-align: center;
    margin: 0px;
    padding: 0px;
    border: 0px solid black;

    border-top: 0px;
    border-bottom: 0px;
    height: 33px;
    background-color: white;
    font-weight: bold;
  }

  #stockMinus,
  #stockPlus {
    padding: 5px;
    font-size: larger;
    font-weight: bolder;
  }

  #stockMinus,
  #stockPlus:hover {
    cursor: pointer;
  }

  #saveStockChangeBtn {
    margin-left: 8px;
    border: 1px solid black;
    border-radius: 50%;
