<script>
  function confirmDelete(productId) {
    Swal.fire({
      title: 'Are you sure?',
      text: "You won't be able to revert this!",
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: 'delete-product',
          data: {
            productId: productId,
          },
          method: 'delete',
          success: (response) => {
            Swal.fire(
              'Good job!',
              'The product is deleted!',
              'success'
            )
            $("#productsTable").load(window.location.href + " #productsTable" );
          }
        })
      }
    })
  }



  function stockChange(count, productId) {
    // alert(stock+''+count)
    let stock = document.getElementById('stock' + productId).value;

    if (count == -1 && stock > 0) document.getElementById('stock' + productId).value = parseInt(stock) - 1;
    else if (count == 1) document.getElementById('stock' + productId).value = parseInt(stock) + 1;
  }


  function saveStockChange(productId) {
    let stock = document.getElementById('stock' + productId).value

    $.ajax({
      url: 'stock-update',
      data: {
        productId: productId,
        stock: stock
      },
      method: 'patch',
      success: (response) => {
        Swal.fire(
          'Good job!',
          'The stock is updated successfully!',
          'success'
        )
      }
    })
  }

</script>


