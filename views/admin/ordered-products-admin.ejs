<div class="container-fluid" style="background-color: #F5F7FF;"">
    <div class="row mt-5 mb-5">
        <div class="col">
            <div class="card bg-default shadow mx-5">
                <div class="card-header bg-transparent border-0">
                    <h3 class="text-black text-center mb-0">Ordered Products</h3>
                </div>
                <div class="table-responsive ">
                    <table class="table align-items-center  table-flush" id="userTable">
                        <thead class="">
                            <tr>
                                <th scope="col">Sno</th>
                                <th scope="col">Product</th>
                                <th scope="col">Title</th>
                                <th scope="col">Price</th>
                                <th scope="col">Quantity</th>
                                <th scope="col">Total Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                                <% let sno = 0 %> 
                                <% orederdItems.forEach(function(item){ %>
                                    <tr>
                                        <td>
                                            <p><%= ++sno %> </p>
                                        </td>
                                        <td>
                                        
                                            <a href="#" class="avatar rounded-circle">
                                                <img alt="Image placeholder" src="/uploads/products/<%= item.products[0].img1 %>">
                                            </a>
                                        
                                        </td>
                                        <td>
                                            <%= item.products[0].title %>
                                        </td>
                                        <td>
                                            ₹<%= item.products[0].price %>
                                        </td>
                                        <td>
                                            <%= item.quantity %>
                                        </td>
                                        <td>
                                            ₹<%= item.quantity * item.products[0].price  %>
                                        </td>
                                    </tr>
                                   
                                    
                                <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>